{% extends 'base.html.twig' %}

{% block title %}Réservation de {{ ad.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Réserver le bien : {{ ad.title }}</h1>

        {{ form_start(form) }}
            <div class="alert alert-light">
                <div class="row">
                    <div class="col">
                        {{ form_row(form.startDate) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.endDate) }}
                    </div>
                </div>
                
            </div>
            <h4>Montant du séjour : <span id="amount">...</span> &euro;</h4>
            <span id="days">0</span> nuit(s) à {{ ad.price }} la nuit

            <p>Informations supplémentaires</p>
            {{ form_row(form.comment) }}

            <button type="submit" class="btn btn-success">Je réserve</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
