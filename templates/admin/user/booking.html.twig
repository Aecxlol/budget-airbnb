{% extends 'admin/base.html.twig' %}

{% block title %}Réservation(s) de l'utilisateur n°{{ user.id }} - {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-5 mt-5">Réservation(s) de {{ user.fullName }} ({{ user.bookings | length }})</h1>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Annonce</th>
                        <th>Date de réservation</th>
                        <th>Montant</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for booking in user.bookings %}
                        <tr>
                            <td>{{ booking.id }}</td>
                            <td>{{ booking.ad.title }}</td>
                            <td>Du {{ booking.startDate | date('d/m/Y') }} au {{ booking.endDate | date('d/m/Y') }}</td>
                            <td>{{ booking.amount | number_format(2, ', ', ' ') }} &euro;</td>
                            <td>
                                <a href="{{ path('admin_booking_edit', {'id': booking.id}) }}" class="btn btn-primary">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}