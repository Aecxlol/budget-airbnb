{% extends 'admin/base.html.twig' %}

{% block title %}Édition de l'annonce {{ ad.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-5">Éditer l'annonce : <em>{{ ad.title }}</em></h1>

        {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h4 class="card-title">Corriger l'annonce ?</h4>
                        </div>
                        <div class="card-body">
                            {{ form_row(form.title) }}
                            {{ form_row(form.price) }}
                            {{ form_row(form.rooms) }}
                            {{ form_row(form.content) }}
                            <h2>Image(s) de l'annonce</h2>
                            <hr>
                            {% for image in images %}
                                <img src="{{ vich_uploader_asset(image, 'imageFile') | imagine_filter('ad_booked_img') }}" class="mb-3">
                            {% endfor %}
                            <hr>
                            <button class="btn btn-primary rounded">
                                <i class="fa fa-check"></i> Enregistrer les modifications
                            </button>
                        </div>  
                    </div>
                    
                </div>
                <div class="col">
                    <div class="card bg-light">
                        <div class="card-header">
                            <h4 class="card-title">Les réservations</h4>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Voyageur</th>
                                        <th>Date de réservation</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for booking in ad.bookings %}
                                        <tr>
                                            <td>{{ booking.id }}</td>
                                            <td>{{ booking.booker.getFullName }}</td>
                                            <td>{{ booking.createdAt | date('d/m/Y H:i') }}</td>
                                            <td>
                                                <a href="" class="btn btn-primary">
                                                    <i class="fa fa-pen"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card bg-light mt-5">
                        <div class="card-header">
                            <h4 class="card-title">Les commentaires</h4>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Voyageur</th>
                                        <th>Note</th>
                                        <th>Commentaire</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for comment in ad.comments %}
                                        <tr>
                                            <td>{{ comment.id }}</td>
                                            <td>{{ comment.author.getFullName }}</td>
                                            <td>{{ comment.rating }}</td>
                                            <td>{{ comment.content }}</td>
                                            <td>
                                                <a href="" class="btn btn-primary">
                                                    <i class="fa fa-pen"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}