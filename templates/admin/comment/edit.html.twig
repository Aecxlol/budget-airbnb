{% extends 'admin/base.html.twig' %}

{% block title %}Édition du commentaire {{ comment.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-5">Éditer le commentaire n°{{ comment.id }}</h1>

        <div class="alert alert-info">
            <strong>Annonce liée</strong> : {{ comment.ad.title }}<br>
            <strong>Auteur</strong> : {{ comment.author.getFullName }}<br>
            <strong>Date de création</strong> : {{ comment.createdAt | date('d/m/Y') }}<br>
            <strong>Note</strong> : {{ comment.rating }}</strong> <i class="fa fa-star comment-rating" aria-hidden="true"></i>       
        </div>

        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="rounded btn btn-primary">Enregistrer les modifications</button>
        {{ form_end(form) }}
    </div>
{% endblock %}