{% extends 'base.html.twig' %}

{% block title %}{{ ad.title }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 mb-3">
                <div class="jumbotron p-3">
                    <h1>{{ ad.title | upper }}</h1>
                    > {{ ad.rooms }} chambres pour <strong>{{ ad.formatPrice }}</strong> par nuit <br>
                    <div class="mb-3"></div>
                    {% if app.user and app.user != ad.author %} 
                        <a href="#" class="btn btn-primary mt-5">Réserver</a>
                    {% endif %}
                    {% if app.user and app.user == ad.author %}                    
                        <a href="{{ path('ads_edit', {'slug': ad.slug, 'id': ad.id}) }}" class="btn btn-primary">Modifier mon annonce</a>
                        <form method="post" action="{{ path('ads_delete', {'slug': ad.slug, 'id': ad.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir supprimer cette annonce ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ad.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    {% endif %}
                </div>
                {{ ad.content | raw }}
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in ad.images %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" class="{% if loop.first %}active{% endif %}"></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for image in ad.images %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="{{ vich_uploader_asset(ad, 'imageFile') | imagine_filter('medium')}}" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>{{ ad.title }}</h5>
                                    <p>{{ image.caption }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            {% set a = ad.author %}
            <div class="col">
                <div class="row">
                    <div class="col-3">
                        <img src="{{ vich_uploader_asset(a, 'imageFile') | imagine_filter('avatar') }}" alt="Avatar de {{ a.getFullName }}" class="avatar-medium">
                    </div>
                    <div class="col">
                        <h3><a href="{{ path('user_show', {'id': a.id }) }}">{{ a.getFullName }}</a></h3>
                        <span class="badge badge-primary">
                            {% if a.ads | length > 1 %}
                                {{ a.ads | length }} annonces
                            {% else %}
                                {{ a.ads | length }} annonce
                            {% endif %}
                        </span>
                    </div>
                </div>
                <br><p>{{ a.description | raw }}</p>
            </div>
        </div>
    </div>

{% endblock %}