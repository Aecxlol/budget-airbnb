{{ form_start(form) }}
    <div class="row">
        <div class="col">
            <div class="alert alert-light">
                <h2>Informations générales</h2>
                <hr>
                {{ form_row(form.title) }}
                {{ form_row(form.price) }}
                {{ form_row(form.rooms) }}
            </div>
            <div class="alert alert-light">
                <h2>Détails de l'annonce</h2>
                <hr>
                {{ form_row(form.content) }}
            </div>
        </div>
        <div class="col">
            <div class="alert alert-light">
                <h2>Image(s) de l'annonce</h2>
                <hr>
                {{ form_row(form.imageFile) }}
                {{ form_row(form.images) }}
            </div>
            <div class="alert alert-success">
                    <h2 class="alert-heading">Créer mon annonce</h2>
                    <p><i class="fa fa-info-circle" aria-hidden="true"></i> Vous êtes sur le point de créer votre annonce.</p>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-check" aria-hidden="true"></i> {{ button|default('Créer l\'annonce') }}
                    </button>
                </div>
                
        </div>
    </div>
    
{{ form_end(form) }}