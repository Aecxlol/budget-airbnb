{% extends 'base.html.twig' %}

{% block title %}Créer une annonce{% endblock %}

{% block body %}
<div class="container">
    <h1>Créer une nouvelle annonce</h1>
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.title) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.price) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.rooms) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.imageFile) }}
            </div> 
        </div>
        <div class="row">
            <div class="col-md-8">
                {{ form_row(form.content) }}
            </div>
        </div>
        <button type="submit" class="btn btn-primary">
            Créer l'annonce
        </button>
    {{ form_end(form) }}
</div>
{% endblock %}