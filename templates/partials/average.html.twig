{% for i in 0..rating %}
    <i class="fa fa-star comment-rating" aria-hidden="true"></i>
{% endfor %}

{% set emptyStars = 5 - rating %}

{% if ad.type == 'float' %}
        <i class="fa fa-star-half-o comment-rating" aria-hidden="true"></i>
        {% for j in range(0, emptyStars, 0.5) %}
            <i class="fa fa-star-o comment-rating" aria-hidden="true"></i>
        {% endfor %}
{% else %}
    {% for j in range(1, emptyStars, 1) %}
        <i class="fa fa-star-o comment-rating" aria-hidden="true"></i>
    {% endfor %}
{% endif %}  