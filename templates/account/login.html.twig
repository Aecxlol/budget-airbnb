{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey | trans(error.messagedata, 'security') }}
                        </div>
                    {% endif %}
                <div class="bg-light py-3 px-3">
                    <h1 class="mb-5 login-title">Identifiez-vous</h1>
                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <input type="text" id="email" name="_username" class="form-control" placeholder="Email" value={{ lastUsername }}>
                        </div>
                        <div class="form-group">
                            <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Connexion ></button>
                            <a href="{{ path('account_register') }}">Pas encore inscrit ?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}